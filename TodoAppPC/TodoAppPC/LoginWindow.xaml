<Window x:Class="TodoAppPC.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoAppPC"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Center" Margin="0,60,0,290" FontSize="40" Width="220"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Center" Margin="0,149,0,217" Width="304"/>
        <Button Content="Login" HorizontalAlignment="Center" Margin="0,275,0,111" Click="LoginButton_Click" Width="148"/>
    </Grid>
</Window>
