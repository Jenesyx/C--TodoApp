<Window x:Class="TodoAppPC.AddProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TodoAppPC"
        mc:Ignorable="d"
        Title="AddProjectDialog" Height="450" Width="800" WindowStartupLocation="CenterOwner">
        <StackPanel Margin="10">
            <Label Content="Project Name:"/>
            <TextBox x:Name="projectNameTextBox" Margin="0,5"/>
            <Label Content="Description:"/>
            <TextBox x:Name="projectDescriptionTextBox" Margin="0,5"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10">
                <Button Content="Add" Margin="0,0,5,0" Click="AddButton_Click"/>
                <Button Content="Cancel" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
</Window>
